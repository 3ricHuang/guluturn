<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/dialog_reason_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/roulette_reason_prompt"
        android:textSize="16sp"
        android:textColor="@color/guluturn_primary"
        android:paddingBottom="12dp" />

    <EditText
        android:id="@+id/dialog_reason_input"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:hint="@string/roulette_reason_hint"
        android:background="@drawable/spin_input_background"
        android:gravity="top|start"
        android:padding="12dp"
        android:textSize="15sp"
        android:inputType="textMultiLine"
        android:maxLines="4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnReasonCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:backgroundTint="@null"
            android:background="@drawable/reject_button_background"
            android:text="@string/roulette_cancel" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnReasonConfirm"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="@null"
            android:background="@drawable/confirm_button_background"
            android:text="@string/roulette_confirm" />
    </LinearLayout>
</LinearLayout>
