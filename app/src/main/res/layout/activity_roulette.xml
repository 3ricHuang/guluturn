<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guluturn_background"
    tools:context=".ui.roulette.RouletteActivity">

    <!-- Top-left menu button -->
    <ImageButton
        android:id="@+id/btnMenu"
        android:layout_width="59dp"
        android:layout_height="52dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_menu_vector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Top-right decision section (includes spin progress + accept/reject buttons) -->
    <com.eric.guluturn.ui.roulette.DecisionSectionView
        android:id="@+id/decisionSectionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnMenu"
        app:layout_constraintBottom_toBottomOf="@+id/btnMenu" />

    <!-- Central spin area (roulette + spin button) -->
    <FrameLayout
        android:id="@+id/spin_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        app:layout_constraintBottom_toTopOf="@+id/object_area"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMenu">

        <com.eric.guluturn.ui.roulette.RouletteView
            android:id="@+id/spinWheelView"
            android:layout_width="match_parent"
            android:layout_height="276dp"
            android:layout_marginBottom="30dp" />

        <Button
            android:id="@+id/spinButton"
            android:layout_width="140dp"
            android:layout_height="48dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="16dp"
            android:background="@drawable/spin_button_background"
            android:backgroundTint="@null"
            android:text="SPIN"
            android:textColor="@color/guluturn_on_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:elevation="6dp"
            style="@android:style/Widget.Button" />
    </FrameLayout>

    <!-- Bottom list of 6 candidate restaurant cards -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/object_area"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/guluturn_background"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spin_area" />

</androidx.constraintlayout.widget.ConstraintLayout>
