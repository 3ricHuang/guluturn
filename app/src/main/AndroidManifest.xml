<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Guluturn"
        tools:targetApi="31">

        <!-- Launcher entry point with splash theme -->
        <activity
            android:name=".ui.entry.LauncherActivity"
            android:exported="true"
            android:theme="@style/Theme.Guluturn.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login screen -->
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Guluturn" />

        <!-- Profile screens -->
        <activity android:name=".ui.profile.ProfileSelectorActivity" />
        <activity android:name=".ui.profile.ProfileCreationActivity" />
        <activity android:name=".ui.profile.ProfileSettingsActivity" />

        <!-- Main roulette feature -->
        <activity android:name=".ui.roulette.RouletteActivity" />

    </application>
</manifest>
